{
    "name": "stevehogo/pest-plugin-lumen",
    "description": "The Pest Lumen Plugin",
    "keywords": [
        "php",
        "framework",
        "pest",
        "unit",
        "lumen"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.1.0",
        "anik/testbench-lumen": "^1.3",
        "illuminate/session": "^9.0|^10.4",
        "pestphp/pest": "^2.0.0"
    },
    "autoload": {
        "psr-4": {
            "Pest\\Lumen\\": "src/"
        },
        "files": [
            "src/Autoload.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "laravel/dusk": "^7.7.0",
        "laravel/lumen-framework": "^9.0|^10.4",
        "pestphp/pest-dev-tools": "^2.5.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Pest\\Lumen\\PestServiceProvider"
            ]
        }
    },
    "scripts": {
        "lint": "pint",
        "test:lint": "pint --test",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:lint",
            "@test:unit"
        ]
    }
}
